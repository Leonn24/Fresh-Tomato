<div class="main-homepage">
  <div id="myCarousel" class="carousel slide">
    <div class="carousel-indicators">
      {{#each movies}}
      <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="{{@index}}" class="{{#if @first}}active{{/if}}" aria-current="{{@index}}"></button>
      {{/each}}
    </div>
    <div class="carousel-inner">
      {{#each movies}}
      <div class="carousel-item {{#if @first}}active{{/if}}">
        <div class="movie-card">
          <h2 class="movie-title">{{this.title}}</h2>
          <img class="movie-p" src="https://image.tmdb.org/t/p/w500{{this.poster_path}}" alt="{{this.title}}">
          <p class="movie-overview">{{this.overview}}</p>
          <p class="release-date">Release Date: {{this.release}}</p>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
