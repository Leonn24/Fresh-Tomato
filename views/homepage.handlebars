{{> layouts/main}}

{{#*inline "pageTitle"}}Home{{/inline}}

{{#*inline "body"}}
<section class="welcome-section">
    <h1>Welcome to Fresh Tomato!</h1>
    <p>Explore and rate the top trending movies.</p>
</section>

<section class="top-movies">
    <h2>Top Trending Movies</h2>
    {{#each movies}}
    <div class="movie">
        <h3>{{title}}</h3>
        <p>Genre: {{genre}}</p>
        <p>Release Year: {{releaseYear}}</p>
        <p class="rating">Rating: {{rating}}/5</p>
    </div>
    {{/each}}
</section>
{{/inline}}