{{> layouts/main}}

{{#*inline "pageTitle"}}User Profile{{/inline}}

{{#*inline "body"}}
  <section class="user-profile">
    <h2>Welcome, {{user.name}}!</h2>
    
    <h3>Your Reviews</h3>
    {{#if user.review.length}}
      <ul class="user-reviews-list">
        {{#each user.review}}
          <li>
            <p>Movie: {{movie.title}}</p>
            <p>Rating: {{review.movie_review}}/5</p>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>No reviews yet. Start reviewing movies!</p>
    {{/if}}
  </section>
{{/inline}}
